{% extends 'base.html.twig' %}

{% block body %}

	<div class="container">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-8">
						<h2>Blog
							<b>Details</b>
						</h2>
					</div>
					<div class="col-sm-4">
						<a href="{{ path('add_post') }}" class="btn btn-info add-new">
							<i class="fa fa-plus"></i>
							Add New</a>
					</div>
				</div>
			</div>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Author</th>
					</tr>
				</thead>
				<tbody>
                    {% for post in allPosts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.content }}</td>
                            <td>{{ post.author }}</td>
                            <td>
                                <a href="{{ path('edit_post', {id: post.id}) }}" class="edit" title="Edit" data-toggle="tooltip">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ path('delete_post', {id: post.id}) }}" class="delete" title="Delete" data-toggle="tooltip">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <div class="well">No Posts Found</div>
                    {% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
